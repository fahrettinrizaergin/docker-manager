# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=dockermgr
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=dockermanager

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Application Configuration
APP_ENV=development
APP_PORT=8080
APP_HOST=0.0.0.0
JWT_SECRET=change_me_to_a_secure_random_string
JWT_EXPIRATION_HOURS=24
FRONTEND_URL=http://localhost:3000

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_API_VERSION=1.43

# Traefik Configuration
TRAEFIK_ENABLED=true
TRAEFIK_API_URL=http://traefik:8080
TRAEFIK_NETWORK=web

# File Storage
STORAGE_TYPE=local
STORAGE_PATH=/data/storage
# For S3/MinIO
S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=

# Cloudflare Configuration (Optional)
CLOUDFLARE_ENABLED=false
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ACCOUNT_ID=

# VCS Integration (Optional)
# GitLab
GITLAB_ENABLED=false
GITLAB_URL=https://gitlab.com
GITLAB_CLIENT_ID=
GITLAB_CLIENT_SECRET=
GITLAB_REDIRECT_URL=http://localhost:8080/api/v1/auth/gitlab/callback

# Bitbucket
BITBUCKET_ENABLED=false
BITBUCKET_CLIENT_ID=
BITBUCKET_CLIENT_SECRET=
BITBUCKET_REDIRECT_URL=http://localhost:8080/api/v1/auth/bitbucket/callback

# Gitea
GITEA_ENABLED=false
GITEA_URL=
GITEA_CLIENT_ID=
GITEA_CLIENT_SECRET=
GITEA_REDIRECT_URL=http://localhost:8080/api/v1/auth/gitea/callback

# Security Scanning (Optional)
TRIVY_ENABLED=false
TRIVY_SERVER_URL=

# Secrets Management (Optional)
VAULT_ENABLED=false
VAULT_ADDRESS=
VAULT_TOKEN=
VAULT_PATH=secret/data/docker-manager

# Monitoring
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Email Notifications (Optional)
SMTP_ENABLED=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=

# Webhook Configuration
WEBHOOK_SECRET=change_me_to_a_secure_random_string

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=60

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true
